@model IEnumerable<ShoppingList.Core.Models.Product>

<div class="container" p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Created products</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                Add new product
            </a>
        </div>
    </div>
    <br /><br />


    @if (Model.Count() > 0)
    {
        <table class="table table-hover" style="width:100%">
            <thead class="thead-dark">
                <tr>
                    <th>
                        Product name
                    </th>
                    <th>
                        Price (kn)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td width="50%">@product.Name</td>
                        <td width="30%">@product.Price</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Product" asp-route-Id="@product.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    Edit
                                </a>
                                @using (Html.BeginForm("DeletePost", "Product", new { Id = product.Id }, FormMethod.Post))
                                {
                                    <button class="btn btn-danger">Delete</button>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No product added.</p>
    }

</div>

