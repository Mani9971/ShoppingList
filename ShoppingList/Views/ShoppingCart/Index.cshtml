@model IEnumerable<ShoppingList.Core.Models.ShoppingCart>

<div class="container" p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Shopping lists</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ShoppingCart" asp-action="Create" class="btn btn-primary">
                Create New Shopping List
            </a>

            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                Create New Product
            </a>
        </div>
    </div>
    <br /><br />


    @if (Model.Count() > 0)
    {
        <table class="table table-hover" style="width:100%">
            <thead class="thead-dark">
                <tr>
                    <th>
                        Shopping list
                    </th>
                    <th>
                        For date
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var list in Model)
                {
                <tr>
                    <td width="50%">@list.Name</td>
                    <td width="30%">@list.ForDate</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="ShoppingCart" asp-route-Id="@list.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                Edit
                            </a>
                            @using (Html.BeginForm("DeletePost", "ShoppingCart", new { Id = list.Id }, FormMethod.Post))
                            {
                                <button class="btn btn-danger">Delete</button>
                            }
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No List exists.</p>
    }

</div>

