@model IEnumerable<ShoppingList.Core.Models.ShoppingCart>

<div class="container" p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ShoppingCart" asp-action="Create" class="btn btn-primary">
                Create New Shopping List
            </a><!--asp-controller nije potrebno ni pisati jer pretpostavka da se radi on CategoryControlleru*-->
        </div>
    </div>
    <br /><br />


    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Shopping list ID
                    </th>
                    <th>
                        Date Created
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Id</td>
                        <td width="30%">@obj.ForDate</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No List exists.</p>
    }

</div>

