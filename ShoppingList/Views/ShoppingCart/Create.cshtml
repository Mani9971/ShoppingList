@model ShoppingList.Core.Models.ShoppingCart
    <form method="post" asp-action="Create">
        <div class="border p-3">
            <div class="form-group row">
                <h2 class="text-info pl-3">Add List</h2>
            </div>
            <div class="row">
                <div class="col-8">
                    <div class="form-group row">
                        <div class="col-4">
                            <!-- Html.LabelFor(m => m.Id) ostavi za listname-->
                        </div>
                        <div class="col-8">
                            <!-- <input asp-for="ForDate" class="form-control" /> ostavi za listname-->
                        </div>

                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            @Html.LabelFor(m => m.ForDate)
                        </div>
                        <div class="col-8">
                            <input asp-for="ForDate" class="form-control" />
                        </div>

                    </div>
                    <div class="form-group row">
                        <div class="col-8 offset-4 row">

                            <div class="col">
                                <input type="submit" class="btn btn-info w-100" value="Create" />
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-primary">
                                    <!--Kad idemo u drugi controller onda pisemo ime controllera uspred-->
                                    Back
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
        </div>

    </form>
